# Trading-TFG Local Configuration
# Copy to .env and adjust if needed

# PostgreSQL (Docker Compose)
AI_MODEL_DB_HOST=localhost
AI_MODEL_DB_PORT=5432
AI_MODEL_DB_NAME=ai_model
AI_MODEL_DB_USER=tfg_user
AI_MODEL_DB_PASSWORD=tfg_password

# Data paths
DATA_DIR=./data
MODELS_DIR=./models
RESULTS_DIR=./results

# Backend API
BACKEND_PORT=3000
FRONTEND_PORT=8080

# Training
DEVICE=cuda  # or cpu
N_ENVS=8     # parallel RL environments (adjust to your CPU cores)
